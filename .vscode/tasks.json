{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev:docker",
			"type": "shell",
			"command": "docker-compose -f docker-compose.yaml up --build --remove-orphans",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "stop:dev:docker",
			"type": "shell",
			"command": "docker-compose -f docker-compose.yaml down",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}
